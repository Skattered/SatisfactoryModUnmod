<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Mod" HorizontalAlignment="Left" Height="79" Margin="133,138,0,0" VerticalAlignment="Top" Width="142" Click="ModButtonOnClick"/>
        <Button Content="UnMod" HorizontalAlignment="Right" Height="79" Margin="0,138,133,0" VerticalAlignment="Top" Width="142" Click="UnModButtonOnClick"/>
        <TextBox HorizontalAlignment="Left" Height="18" Margin="241,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="365" Text="{Binding Path=BaseFolderPath}" Name="PathTextBox"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="174,273,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
